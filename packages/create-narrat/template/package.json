{
  "name": "narrat-template",
  "version": "3.9.2",
  "private": true,
  "description": "Template for Narrat game engine",
  "main": "electron-main.js",
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "game",
    "vue.js",
    "snowpack"
  ],
  "author": "Liana Pigeot <32243840+liana-p@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "cross-env VITE_BUILD=true vite build",
    "build-debug": "cross-env VITE_BUILD=true VITE_DEBUG=true vite build",
    "type-check": "tsc --noEmit",
    "desktop": "npm run build && npm run electron",
    "electron": "electron .",
    "package": "npm run build && electron-forge package && shx cp steam_appid.txt out/narrat-template-win32-x64/steam_appid.txt",
    "package-mac": "npm run build && electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "es6-promise": "^4.2.8",
    "narrat": "^3.9.5",
    "pinia": "^2.1.7",
    "steamworks.js": "^0.2.0",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@electron/rebuild": "^3.2.13",
    "@vitejs/plugin-vue": "^4.2.3",
    "cross-env": "^7.0.3",
    "electron": "^25.1.0",
    "electron-winstaller": "^5.1.0",
    "prettier": "^3.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vite-plugin-narrat": "3.6.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Your game name",
            "authors": "Your name",
            "description": "Your game description"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
