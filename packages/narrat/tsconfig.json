{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "outDir": "dist",
    "sourceMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@testing-library/jest-dom"],
    "typeRoots": ["src/types/", "node_modules/@types/"]
  },
  "exclude": ["**/*.spec.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/tests.setup.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
